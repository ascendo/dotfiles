[include]
    path = ~/.gitconfig_private
[core]
    excludesfile = ~/.gitexclude
    whitespace = fix,trailing-space,cr-at-eol
[pack]
    # Auto-detect the number of CPUs.
    threads = 0
[diff]
    renames = copies
[color]
    ui = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = white
    frag = cyan bold
    func = magenta
    plain = black bold
    old = red
    new = green
    whitespace = red reverse
[color "status"]
    branch = yellow reverse
    updated = red bold
    changed = red
    untracked = magenta
[rebase]
    autosquash = true
[alias]
    amend = commit --amend
    ammend = commit --amend
    patch = add --patch
[url "git://github.com/"]
    insteadOf = https://github.com/
